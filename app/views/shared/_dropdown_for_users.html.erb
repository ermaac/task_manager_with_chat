<div class="modal fade" id="user<%= user.id %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">User information</h4>
      </div>
      <div class="modal-body">
      <% if board_creator? current_user %>
        <%= form_for user_permission(@board, user) do |f| %>
          <%= hidden_field_tag :board_id, @board.id %>
          <%= hidden_field_tag :user_id, user.id %>
          <% InvitedUserPermission::PERMITTABLE_FIELDS.each do |field_name| %>
            <p>
              <%= f.check_box field_name %>
              <%= InvitedUserPermission::FIELD_NAMES[InvitedUserPermission::PERMITTABLE_FIELDS.index(field_name)] %>
            </p>
          <% end %>
          <%= f.submit 'Update Permission', class: "btn btn-success" %>
        <% end %>
      <% end %>
      </div>
      <div class="modal-footer">
        <%= link_for_creator(user) %>
        <%= link_for_subscriber(user) %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
