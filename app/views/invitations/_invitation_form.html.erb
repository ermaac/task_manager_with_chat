<div class="thumbnail">
  <div class="caption">
    <%= form_for("send", method: "post") do |f| %>
      <div class="form-group">
        <%= f.select :board_title, current_user.boards.all.collect { |p|  p.title }, include_blank: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :inviting_user, class: "form-control",size: "auto x2",placeholder:"Email",required:true %>
      </div>
      <%= f.submit "Send",class: "btn btn-success btn-block" %>
    <% end %>
  </div>
</div>
