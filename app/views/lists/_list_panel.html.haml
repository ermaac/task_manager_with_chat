.col.col-md-3
  .panel.panel-default.list-panel
    .panel-heading
      %span.list_title
        = list.title
      .dropdown.pull-right{list: "#{list.id}"}
        %a.dropdown-toggle{'data-toggle'=>'dropdown',
                            role: 'button',
                            'aria-haspopup'=>true,
                            'aria-expanded'=>false}
          .glyphicon.glyphicon-menu-hamburger.note_icon
        %ul.list_actions_menu{class: 'dropdown-menu', role: 'menu', id: "list_#{list.id}"}
          %li{id: "destroy_list_board_id_#{@board.id}_user_id_#{current_user.id}"}
            - if can? :destroy, list
              = link_to "#delete_list_#{list.id}", 'data-toggle'=>'modal' do
                .fa.fa-times
          %li{id: "update_list_board_id_#{@board.id}_user_id_#{current_user.id}"}
            - if can? :update, list
              = link_to "#update_list_board_id_#{list.id}", 'data-toggle'=>'modal' do
                .fa.fa-pencil
          %li{id: "switch_list_board_id_#{@board.id}_user_id_#{current_user.id}"}
            - if can? :switch_editability, list
              = link_to switch_list_editability_path(@board, list), method: :put, remote: true do
                .fa.fa-ban
    .panel-body
      .list.scrollable
        = render partial: 'notes/note', collection: list.notes.order('created_at asc'), locals: {list: list}
      - unless list.is_disabled
        .list_footer{id: "create_list_board_id_#{@board.id}_user_id_#{current_user.id}"}
          - if can? :create, @note
            = render 'notes/note_form', list: list
